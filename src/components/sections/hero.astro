// Hero.astro
---

<div class="hero-section">
    
    <!-- FONDO DE VIDEO (NATIVO) -->
    <div id="video-container">
        <video 
            autoplay 
            muted 
            loop 
            playsinline 
            id="bg-video"
            poster="/img/poster-video.jpg" 
        >
            <!-- AsegÃºrate de que la ruta coincide con tu archivo -->
            <source src="/videos/hero.webm" type="video/mp4">
            Tu navegador no soporta video HTML5.
        </video>
        
        <!-- Capa oscura -->
        <div class="overlay-oscura"></div>
    </div>






    <div class="hero-content" style="margin-top:35px">
        <img src="/img/kontrast-6-caio.webp" 
        alt="Logo Festival KONTRAST" 
        class="hero-logo"
        style="scale:1.5;" />
        
        <img src="/img/disegno.webp" 
        class="hero-logo"
        style="scale:.9;" />
        
    </div>

</div>

<style>
    .hero-section {
        position: relative;
        height: 100vh;
        width: 100%;
        overflow: hidden;
        background-color: black;
    }

    #video-container {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        z-index: 0;
    }

    /* ESTILOS DEL VIDEO NATIVO */
    #bg-video {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        
        /* Esto hace que cubra toda la pantalla sin deformarse (como background-size: cover) */
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        
        /* Asegura el cover en navegadores modernos */
        object-fit: cover; 
        width: 100vw;
        height: 100vh;
        
        opacity: 0.8;
    }

    .overlay-oscura {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(0,0,0,0.4); 
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 10;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
    }

    .hero-logo {
        width: 80%;
        max-width: 600px;
        height: auto;
        margin-bottom: 20px;
    }

    .btn-hero {
        padding: 20px 40px;
        font-size: 1.2rem;
        background-color: var(--c-rojo);
        color: white;
        border-radius: 50px;
        font-weight: 800;
        text-transform: uppercase;
        transition: transform 0.2s;
    }
    .btn-hero:hover { transform: scale(1.05); background: white; color: black; }
</style>